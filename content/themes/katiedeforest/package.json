{
    "name": "katiedeforest.com",
    "description": "A Ghost theme",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "docs": "https://dope.ghost.io/about/",
    "config": {
        "posts_per_page": 5,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 750
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1140
            },
            "xxl": {
                "width": 1920
            }
        },
        "card_assets": true,
        "custom": {
            "title_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "body_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "show_author": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "show_related_posts": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "first_homepage_link": {
                "type": "image",
                "default": "First image on homepage",
                "group": "homepage",
                "description": "Upload image for first coloumn on homepage" 
            },
            "second_homepage_link": {
                "type": "image",
                "default": "Second image on homepage",
                "group": "homepage",
                "description": "Upload image for second coloumn on homepage" 
            },
            "third_homepage_link": {
                "type": "image",
                "default": "Third image on homepage",
                "group": "homepage",
                "description": "Upload image for third coloumn on homepage" 
            },
            "fourth_homepage_link": {
                "type": "image",
                "default": "Third image on homepage",
                "group": "homepage",
                "description": "Upload image for fourth coloumn on homepage" 
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "@tryghost/shared-theme-assets": "2.4.3",
        "autoprefixer": "10.4.19",
        "beeper": "2.1.0",
        "cssnano": "7.0.1",
        "gscan": "4.43.1",
        "gulp": "5.0.0",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "ordered-read-streams": "2.0.0",
        "postcss": "8.4.38",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.0"
    }
}
